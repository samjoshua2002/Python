def factorial(x):
    if x==1:
        return 1
    else:
        return(x * factorial(x-1))
x=int(input("enter the no to find the factorial: "))
factorial(x)

print("the factorial of ",x,"is",factorial(x))

def factorial(x):
    y=1
    for i in range(x,0,-1):
        y*=i
    return y
        
x=int(input("enter the no to find the factorial: "))
factorial(x)

print("the factorial of ",x,"is",factorial(x))
